<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/java_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/current_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/java_switch"
        app:layout_constraintBottom_toBottomOf="@id/java_switch"
        app:layout_constraintEnd_toStartOf="@id/java_switch"
        tools:text="@string/lang_kotlin"
        />

    <Button
        android:id="@+id/run_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_search_sample"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/run_category_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_category_search_sample"
        app:layout_constraintTop_toBottomOf="@+id/run_search"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/run_reverse_geocoding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_reverse_geocoding_sample"
        app:layout_constraintTop_toBottomOf="@+id/run_category_search"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/clear_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline"
        android:text="@string/clear_output"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />

    <ScrollView
        android:id="@+id/output_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_guideline"
        >

        <TextView
            android:id="@+id/api_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/output_view_title"
            />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
